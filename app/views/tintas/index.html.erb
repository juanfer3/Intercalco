<p id="notice"><%= notice %></p>

<h1>Tintas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Pantone</th>
      <th>Malla</th>
      <th>Producto</th>
      <th>Tipo de unidad</th>
      <th>Cantida</th>
 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tintas.each do |tinta| %>
    
      <tr>
        <td><%= tinta.codigo %></td>
        <td><%= tinta.pantone %></td>
        <td><%= tinta.malla.num_malla %></td>
        <td><%= tinta.producto.nombre %></td>
        <td><%= tinta.tipo_de_unidad %></td>
        <td><%= tinta.cantida %></td>
        <td><%= link_to 'Show', tinta %></td>
        <td><%= link_to 'Edit', edit_tinta_path(tinta) %></td>
        <td><%= link_to 'Destroy', tinta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>
<!--Boton Crear -->
  <div class="fixed-action-btn">
    <a href="tintas/new"  class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
  </div>
<!--/Boton Crear -->

