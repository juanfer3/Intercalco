<p id="notice"><%= notice %></p>

<h1>Base Tintas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Linea tinta</th>
      <th>Descripcion base</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @base_tintas.each do |base_tinta| %>
      <tr>
        <td><%= base_tinta.codigo %></td>
        <td><%= base_tinta.linea_tinta.tipo_de_linea %></td>
        <td><%= base_tinta.descripcion_base %></td>
        
        <td><%= link_to 'Show', base_tinta %></td>
        <td><%= link_to 'Edit', edit_base_tinta_path(base_tinta) %></td>
        <td><%= link_to 'Destroy', base_tinta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!--Boton Crear -->
  <div class="fixed-action-btn">
    <a href="base_tintas/new"  class="btn-floating btn-large red">
      <i class="large material-icons">add_to_photos</i>
    </a>
  </div>
<!--/Boton Crear -->

