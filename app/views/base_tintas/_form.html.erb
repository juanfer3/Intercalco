<%= simple_form_for(@base_tinta) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :codigo %>
    <%= 
      f.association :linea_tinta,
         collection: LineaTinta.all, 
         label_method: :tipo_de_linea, 
         value_method: :id, 
         as: :select, 
         include_blank: 'Seleccione Base'
    
    %>
    <%= f.input :descripcion_base %>
  
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
